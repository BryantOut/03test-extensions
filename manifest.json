{
  "manifest_version": 3,
  "name": "Taobao Seller Login Checker",
  "version": "1.5",
  "description": "跳转商家中心并判断是否已登录。",
  "permissions": [
    "tabs",
    "notifications",
    "webNavigation",
    "scripting",
    "alarms",
    "storage"
  ],
  "host_permissions": [
    "https://myseller.taobao.com/*",
    "https://loginmyseller.taobao.com/*",
    "https://sycm.taobao.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "生意参谋爬取",
    "default_badge_text": "off",
    "default_badge_background_color": "#f44336"
  }
}
